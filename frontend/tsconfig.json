{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "target":"ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src", 
    "node_modules/@solana/wallet-adapter-react-ui"
  ],
  "exclude": [
    "node_modules"
  ]
}
